@model IEnumerable<KioskManagementApp.Models.Employee>

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
<link href="~/AdminStyle/css/styles.css" rel="stylesheet" />

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewBag.Title</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>

    <p>
        @Html.ActionLink("Thêm nhân viên", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div id="page-wrapper">
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Danh sách nhân viên
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.EmployeeName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Gender)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DateOfBirth)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Phone)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Team.TeamName)
                                            </th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var employee in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.EmployeeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.DateOfBirth)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelEmployee => employee.Team.TeamName)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = employee.EmployeeId }, new { @class = "btn btn-warning" })
                                                @Html.ActionLink("Xoá", "Delete", new { id = employee.EmployeeId }, new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/AdminStyle/js/datatables-simple-demo.js"></script>
<script src="~/AdminStyle/js/scripts.js"></script>
<!--DataTables-->
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
